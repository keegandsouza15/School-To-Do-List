<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_text_course_name"
        android:hint="Enter the Course's Name"
        style="@style/itemText.Large"/>
    <EditText
        android:id="@+id/edit_text_instructor_name"
        android:hint="Enter the Instructors Name"
        style="@style/itemText.Large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/button_exit_course_dialog"
            android:src="@drawable/ic_clear_fab"
            style="@style/small_buttonsStyle" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/button_course_enter"
            android:src="@drawable/ic_checkmark"
            style="@style/small_buttonsStyle"/>


    </LinearLayout>

</LinearLayout>